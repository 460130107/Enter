<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.objectFactory.spring.autoWire.alwaysRespect" value="true" />
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <constant name="struts.multipart.saveDir" value="/tmp" />
    <!-- <constant name="struts.devMode" value="true" /> -->
    
    <package name="default" namespace="/" extends="struts-default">
        <!-- <interceptors>
            <interceptor name="sessionInterceptor" class="org.fireply.enter.interceptor.SessionInterceptor" />
            <interceptor-stack name="sessionStack">
                <interceptor-ref name="defaultStack" />
                <interceptor-ref name="sessionInterceptor" />
            </interceptor-stack>
        </interceptors>
        
        <default-interceptor-ref name="sessionStack" /> -->
    
        <global-results>
            <result name="login">/signin.jsp</result>
            <result name="error">/error/error.jsp</result>
            <result name="success">/index.jsp</result>
        </global-results>
        
        <action name="" class="loginAction">
            <result name="index">/index.jsp</result>
        </action>
        
        <action name="login" class="loginAction">
            <result name="profile_user">/profile/user.jsp</result>
            <result name="profile_admin" type="redirectAction">newsManagement</result>
        </action>
        
        <action name="register" class="registerAction">
            <result name="success" type="stream">
                <param name="contentType">text/html; charset=UTF-8</param>
                <param name="inputName">isUnique</param>
            </result>
        </action>
        
        <action name="news" class="newsAction">
            <result name="news">/pages/news.jsp</result>
            <result name="news-detail">/pages/news-detail.jsp</result>
        </action>
        
        <action name="newsManagement" class="newsManagementAction">
            <result name="news">/pages/admin/news-management.jsp</result>
        </action>
        
        <action name="newsDeployment" class="newsDeploymentAction">
            <!-- <result name="success">/pages/admin/news-management.jsp</result> -->
            <result name="success" type="redirectAction">newsManagement</result>
            <result name="input" type="stream">
                <param name="contentType">text/html; charset=UTF-8</param>
                <param name="inputName">filePath</param>
            </result>
            <result name="ajax" type="stream">
                <param name="contentType">text/html; charset=UTF-8</param>
                <param name="inputName">filePath</param>
            </result>
        </action>
        
    </package>
</struts>